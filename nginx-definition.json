{
        "containerDefinitions": [
            {
                "name": "nginx-container",
                "image": "nginx:latest",
                "cpu": 1024,
                "memoryReservation": 2048,
                "links": [],
                "portMappings": [
                    {
                        "containerPort": 80,
                        "hostPort": 80,
                        "protocol": "tcp"
                    }
                ],
                "essential": true,                
                "logConfiguration": {
                    "logDriver": "awslogs",
                    "options": {
                        "awslogs-group": "/ecs/nginx-definition",
                        "awslogs-region": "us-east-1",
                        "awslogs-stream-prefix": "ecs"
                    }
                }
            }
        ],
        "family": "nginx-definition",
        "networkMode": "awsvpc",
        "status": "ACTIVE",
        "requiresCompatibilities": [
            "FARGATE"
        ],
        "cpu": "1024",
        "memory": "2048"
}
